/* pages/homepage/homepage.wxss */

.homecontainer {
 display: flex
}
swiper {
  width: 100%;
  height: 350rpx;
}
swiper image {
  width: 100%;
  height:100%;
}
.menucontainer {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    flex-direction:row;
}
.menucontainer .inner {
  display: inline-flex;
  width: 25%;
  height: 200rpx;
  flex-wrap: wrap;
  margin-bottom: 10rpx;
}
.img_box {
  width: 100%;
  height: 70%;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}
.menu_img {
  --size: 100rpx;
  width: var(--size);
  height: var(--size);
}
.menu_text {
  display: inline-flex;
  width: 100%;
  height: 30%;
  align-items: center;
  justify-content: center;
  font-size: .7em;
}


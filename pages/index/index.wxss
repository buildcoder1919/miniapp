.homecontainer {
 display: flex
}
.swiper_model {
  display: flex
}
swiper {
  width: 100%;
  height: 280rpx;
}
.pic {
  width: 100%;
  height:350rpx;
}
.menucontainer {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    flex-direction:row;
}
.menucontainer .inner {
  display: inline-flex;
  width: 25%;
  height: 200rpx;
  flex-wrap: wrap;
  margin-bottom: 5rpx;
}
.img_box {
  width: 100%;
  height: 70%;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}
.menu_img {
  --size: 100rpx;
  width: var(--size);
  height: var(--size);
}
.menu_text {
  display: inline-flex;
  width: 100%;
  height: 30%;
  align-items: center;
  justify-content: center;
  font-size: .7em;
}
.banner {
  display: inline-flex;
  width: 100%;
  height:350rpx;
}
.banner swiper {
  display: inline-flex;
  height:350rpx;
}
.banner_inner {
  margin-left: 2.5%;
}
.banner_pic {
  margin-top: 1%;
  width: 95%;
  height:350rpx;
  border-radius: 20rpx;
}

